<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_marginTop="2dp"
              android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ly_avatar"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="11dp"/>

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_gray"
                android:textSize="10sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/rl_fix_info"
            android:layout_toRightOf="@id/ly_avatar"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_task_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/txt_blue"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/txt_title_first"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/txt_gray"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/txt_value_first"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/txt_gray"
                    android:textSize="12sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title_second"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/txt_gray"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/txt_value_second"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/txt_gray"
                    android:textSize="12sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title_third"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/txt_gray"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/txt_value_third"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/txt_gray"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_fix_info"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/txt_fix_task_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="好人卡数量 : "
                android:textColor="@color/txt_gray"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/txt_task_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_fix_task_card_number"
                android:layout_toRightOf="@id/txt_fix_task_card_number"
                android:text="8"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/txt_fix_task_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_fix_task_card_number"
                android:layout_marginTop="2dp"
                android:text="赏金:"
                android:textColor="@color/txt_gray"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/txt_task_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_fix_task_money"
                android:layout_toRightOf="@id/txt_fix_task_money"
                android:text="8.0"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/txt_task_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_fix_task_money"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_recycler_task_btn"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="3dp"
                android:text="接受"
                android:textColor="@color/txt_blue"
                android:textSize="13sp"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
