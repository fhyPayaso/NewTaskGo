<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_account">


    <LinearLayout
        android:id="@+id/ly_header_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/btn_back_forget"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:src="@drawable/btn_back"/>

        <TextView
            android:id="@+id/txt_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="忘记密码"
            android:textColor="@color/txt_blue"
            android:textSize="16sp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_context_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_header_forget"
        android:layout_marginTop="28dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp">


        <LinearLayout
            android:id="@+id/ly_user_number_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_phonenumber"/>

            <EditText
                android:id="@+id/edit_user_number_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="手机号"
                android:singleLine="true"
                android:textSize="14sp"
                />

        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ly_user_number_forget"
            android:layout_marginTop="7dp"
            android:background="@color/txt_blue"/>


        <RelativeLayout
            android:id="@+id/ly_verification_code_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:layout_marginTop="15dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_verification_forget"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_password"/>

            <EditText
                android:id="@+id/edit_verification_code_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_verification_forget"
                android:layout_toEndOf="@+id/img_verification_forget"
                android:layout_toRightOf="@+id/img_verification_forget"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textSize="13sp"
                />

            <Button
                android:id="@+id/btn_verification"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/bg_verification"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </RelativeLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ly_verification_code_forget"
            android:layout_marginTop="7dp"
            android:background="@color/txt_blue"/>


        <LinearLayout
            android:id="@+id/ly_secret_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4"
            android:layout_marginTop="17dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_password"/>

            <EditText
                android:id="@+id/edit_secret_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="14sp"
                />

        </LinearLayout>

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ly_secret_forget"
            android:layout_marginTop="7dp"
            android:background="@color/txt_blue"/>


        <LinearLayout
            android:id="@+id/ly_secret_again_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line5"
            android:layout_marginTop="17dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_password"/>

            <EditText
                android:id="@+id/edit_secret_again_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ly_secret_again_forget"
            android:layout_marginTop="7dp"
            android:background="@color/txt_blue"/>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_certain"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_below="@id/rl_context_forget"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_account_btn"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</RelativeLayout>