<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_gray"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="请填写您本人的银行卡信息"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/bg_gray"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_card_number"
            android:layout_alignStart="@+id/txt_card_number"
            android:layout_alignTop="@+id/edit_get_name"
            android:text="姓名"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/edit_get_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/txt_name"
            android:background="@null"
            android:layout_marginTop="10dp"/>
        <View
            android:id="@+id/view_below_name"
            android:layout_below="@id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:background="@color/bg_gray"/>
        <TextView
            android:id="@+id/txt_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_below="@id/view_below_name"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="银行卡号"
            />
        <EditText
            android:id="@+id/edit_get_card_number"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/txt_card_number"
            android:background="@null"
            android:layout_below="@id/view_below_name"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_card_number"
            android:background="@color/bg_gray"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:background="@drawable/bg_task_btn_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="150dp"/>
</RelativeLayout>